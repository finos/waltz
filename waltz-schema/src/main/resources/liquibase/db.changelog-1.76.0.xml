<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd"
                   logicalFilePath="db.changelog-1.76.0.xml">

    <changeSet id="v1-75-tag"
               author="ramerav">
        <tagDatabase tag="v1.75"/> <!-- tag the current db version, i.e. the last  -->
    </changeSet>

    <!-- 7345 Create Table - ProposedFlow Table -->
    <changeSet id="20251107-4525-1"
               author="guptmayb">
        <createTable tableName="entity_workflow_result"
                     remarks="Store details of entities impacted by a workflow referenced by workflow_entity">

            <column name="workflow_id" type="${id.type}">
                <constraints primaryKey="true" nullable="false" primaryKeyName="entity_workflow_result_pkey"/>
            </column>

            <column name="workflow_entity_id" type="${id.type}"
                    remarks="The ID of the entity managed by the workflow">
                <constraints primaryKey="true" nullable="false" primaryKeyName="entity_workflow_result_pkey"/>
            </column>

            <column name="workflow_entity_kind" type="${enum.type}"
                    remarks="The kind of the entity managed by the workflow (e.g., PROPOSED_FLOW)">
                <constraints primaryKey="true" nullable="false" primaryKeyName="entity_workflow_result_pkey"/>
            </column>

            <column name="result_entity_id" type="${id.type}"
                    remarks="The ID of the entity impacted by the workflow">
                <constraints primaryKey="true" nullable="false" primaryKeyName="entity_workflow_result_pkey"/>
            </column>

            <column name="result_entity_kind" type="${enum.type}"
                    remarks="The kind of the entity impacted by the workflow (e.g., LOGICAL_FLOW)">
                <constraints primaryKey="true" nullable="false" primaryKeyName="entity_workflow_result_pkey"/>
            </column>

            <column name="created_at"
                    type="TIMESTAMP"
                    defaultValueComputed="${now.value}">
                <constraints nullable="false"/>
            </column>

            <column name="created_by"
                    type="${name.type}">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_entity_workflow_result"
                     tableName="entity_workflow_result"
                     unique="false">
            <column name="workflow_id"/>
            <column name="workflow_entity_id"/>
            <column name="workflow_entity_kind"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>